
<nav class="navbar navbar-expand sticky-top" id="cat-nav">
  <ul class="navbar-nav scrollable-content d-flex h-100">
    <% @categorias.each do |cat|%>
      <li class="nav-item ilb">
        <a data-turbolinks="false" class="nav-link" href="#cat_<%= cat.id %>"><%= cat.name %></a>
      </li>
    <%end%>
  </ul>
</nav>

<% @negocios.each do |cat|%>
  <div class="container cont-cat" id="cat_<%= cat[:id] %>">
    <h2><%= cat[:nombre] %></h2>
    <div class="card-columns">
      <% cat[:negocios].each do |neg| %> 
        <div class="card">
          <img class="card-img-top img-cover" src="<%= neg.logo %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title mb-0"><%= neg.nombre %></h5>
            <p class="card-text mb-0"><%= neg.descripcion %></p>
          </div>
          <div class="card-footer text-right">
            <% if neg.metodo_pago == "3"%>
            Tarjetas <i class="far fa-credit-card"></i> | Efectivo <i class="fas fa-money-bill-alt"></i>
            <% elsif neg.metodo_pago == "2"%>
            Tarjetas <i class="far fa-credit-card"></i>
            <% else %>
            Efectivo <i class="fas fa-money-bill-alt"></i>
            <% end %>
          </div>
        </div>
      <%end%>
      <% if cat[:negocios].count < 3 %>
        <% (3-cat[:negocios].count).times do %>
          <div class="card d-none d-md-inline-block">
            <img class="card-img-top img-cover" src="https://image.freepik.com/vector-gratis/ilustracion-concepto-vacio_114360-1188.jpg" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title mb-0">Proximamente...</h5>
              <p class="card-text mb-0">Se iran agregando mas negocios a la lista</p>
            </div>
            <div class="card-footer text-right">
              Tarjetas <i class="far fa-credit-card"></i> | Efectivo <i class="fas fa-money-bill-alt"></i>
            </div>
          </div>
        <% end %>
      <%end%>
    </div>
  </div>
<%end%>
