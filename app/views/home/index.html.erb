
<div id="demo" class="carousel slide" data-ride="carousel">

  <!-- Indicators -->
  <ul class="carousel-indicators">
    <li data-target="#demo" data-slide-to="0" class="active"></li>
    <li data-target="#demo" data-slide-to="1"></li>
    <li data-target="#demo" data-slide-to="2"></li>
  </ul>
  
  <!-- The slideshow -->
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://cdn.pixabay.com/photo/2016/11/01/18/38/background-1789175_960_720.png" alt="Los Angeles" width="1100" height="200">
    </div>
    <div class="carousel-item">
      <img src="https://cdn.pixabay.com/photo/2017/06/14/01/43/background-2400765_960_720.jpg" alt="Chicago" width="1100" height="200">
    </div>
    <div class="carousel-item">
      <img src="https://cdn.pixabay.com/photo/2017/03/25/18/06/color-2174065_960_720.png" alt="New York" width="1100" height="200">
    </div>
  </div>
  
  <!-- Left and right controls -->
  <a class="carousel-control-prev" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>
</div>


<nav class="navbar navbar-expand sticky-top" id="cat-nav">
  <ul class="navbar-nav scrollable-content d-flex h-100">
    <% @categorias.each_with_index do |cat,i|%>
      <li class="nav-item ilb">
        <a data-turbolinks="false" class="<%=i == 0 ? 'nav-link active' : 'nav-link' %>" href="#cat_<%= cat.id %>"><%= cat.name.upcase %></a>
      </li>
    <%end%>
  </ul>
</nav>

<% @negocios.each do |cat|%>
  <div class="container cont-cat" id="cat_<%= cat[:id] %>">
    <h2><%= cat[:nombre] %></h2>
    <div class="owl-carousel owl-theme">
      <% cat[:negocios].each do |neg| %> 
        <div class="card product-card">
          <a href="/socios/<%= neg.id %>-<%= neg.nombre.to_s.parameterize %>" class="stretched-link"></a>
          <img class="card-background img-cover" src="<%= neg.logo %>" alt="Card image cap">
          <div class="card-body card-top">
            <h5 class="card-title mb-0"><%= neg.nombre %></h5>
            <h6 class="mb-0 subtitulo">4.5 Estrellas</h6>
          </div>
          <div class="card-footer card-bottom overflow">
            <p>
              <%= neg.descripcion %>
            </p>
          </div>
        </div>
      <%end%>
    </div>
  </div>
<%end%>
