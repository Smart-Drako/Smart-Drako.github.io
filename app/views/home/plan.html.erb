<div class="container">

  <div class="row mt-20 mb-20">
    <h2>Mi Plan</h2>
  </div>
  <div class="class row">
    <div class="col-12 col-md-4">
      <ul class="list-group">
        <li class="list-group-item active"><b><%=@plan.nombre%></b></li>
        <%if @config_user.estatus == 1%>
          <li class="list-group-item">Estatus: <span class="badge badge-success"><%=@estatus%></span></li>
        <%else%>
          <li class="list-group-item">Estatus: <span class="badge badge-danger"><%=@estatus%></span></li>
        <%end%>
        <li class="list-group-item">Inicio Mensualidad: <b><%=@config_user.fecha_inicio.strftime("%d/%m/%Y")%></b></li>
        <li class="list-group-item">Vencimiento: <b><%=@config_user.fecha_vencimiento.strftime("%d/%m/%Y")%></b></li>
        <%if @config_user.estatus == 1%>
          <li class="list-group-item">Número de pedidos: <span class="badge badge-success">ilimitados</span></li>
        <%else%>
          <li class="list-group-item">Número de pedidos: <span class="badge badge-danger">0</span></li>
        <%end%>
      </ul>
    </div>
  </div>
</div>