
<div class="container">
<h1>Reportes</h1>

  <div class="row">
    <div class="col-md-4 col-12"></div>
    <div class="form-row col-md-4 col-12">
      <div class="col">
        <select id="periodo_reporte" class="form-control">
          <option value="">Selecciona...</option>
          <option value="1">Hoy</option>
          <option value="2">Ayer</option>
          <option value="3">Mes Actual</option>
          <option value="4">Mes Anterior</option>
          <option value="5">Personalizado</option>
        </select>
      </div>
      <div class="col pickers">
        <input class="form-control pickers" id="picker_desde" type="text" placeholder="desde" disabled>
      </div>
      <div class="col pickers">
        <input class="form-control pickers" id="picker_hasta" type="text" placeholder="hasta" disabled>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4 text-center">
    </div>
    <div class="col-md-4 col-12 text-center">
      <%= link_to(reportes_pedidos_url(format: "xlsx"), :class => 'btn btn-sm btn-aqua disabled', :id => "generar_reporte_pedidos") do %>
        Reporte de Pedidos <i class="far fa-file-excel"></i>
      <% end %>
      <%= link_to(reportes_pedidos_url(format: "xlsx"), :class => 'btn btn-sm btn-aqua disabled', :id => "generar_reporte_productos") do %>
        Productos por Pedidos <i class="far fa-file-excel"></i>
      <% end %>
    </div>
  </div>
</div>
