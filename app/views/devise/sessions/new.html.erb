<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin', autocomplete: "off"} )  do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">Inicio de Sesión</h1>
  <div class="form-group">
    <label for="user_email">Correo</label>
    <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text"><i class="fa fa-user"></i></div>
        </div>
        <%= f.email_field :email, autofocus: true, required:"required", class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="user_password">Contraseña</label>
    <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text"><i class="fa fa-envelope"></i></div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", required:"required", class:"form-control" %>
    </div>
  </div>
  <div class="text-center form-group">
    <button class="btn btn-success" type="submit">Iniciar sesión</button>
  </div>
  <div class="text-center form-group">
    <a data-turbolink="false" href="/registro">¿No tienes cuenta? Regístrate</a>
  </div>
<% end %>

