  <script>
    $(document).ready(function(){
      Paloma.start();
      $('[data-tooltip="tooltip"]').tooltip()
    });

    function copyRef() {

      var copyText = $("#link_recomendado");
      var $temp = $("<input>");
      $("body").append($temp);
      $temp.val(copyText.val()).select();
      document.execCommand("copy");
      $temp.remove();

      
      var tooltip = document.getElementById("copiar_recomendado");
      tooltip.innerHTML = "Copiado: " + copyText.val();
    }

    function outFuncRef() {
      var tooltip = document.getElementById("copiar_recomendado");
      tooltip.innerHTML = "Copiar link";
    }
        
  </script>
  <%= render "/shared/plantillas" %>

  <% if browser.platform.ios? %>
    <script>
      $(document).ready(function(){

        var cat_nav = $("#cat-nav").length

        if(cat_nav > 0){
          window.onscroll = function() {myFunction()};

          var navbar = document.getElementById("cat-nav");
          var sticky = navbar.offsetTop;

          function myFunction() {
            if (window.pageYOffset >= sticky) {
              navbar.classList.add("sticky-ios")
              console.log("sticky");
            } else {
              navbar.classList.remove("sticky-ios");
              console.log("No sticky");
            }
          }
        }
      });
    </script>
